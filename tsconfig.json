{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"react-native": [
				"../../node_modules/react-native",
				"../../node_modules/nativewind"
			],
			"@/*": ["./*"]
		},
		"types": ["nativewind/types"]
	},
	"include": [
		"nativewind-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"components/TaskList.js"
	]
}
